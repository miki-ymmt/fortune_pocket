<div class="container mx-auto p-5">
  <div class="flex flex-col justify-center items-center min-h-screen">
    <div class="card w-2/3 sm:w-96 bg-neutral text-neutral-content">
      <div class="card-body items-center text-center">
      <%= image_tag @image, width: '250', class: 'w-40 sm:w-64 mb-6' %>
        <h2 class="card-title">今日のあなたは...</h2>
        <p><%= @omikuji %></p>
      </div>
    </div>
    <div class="card-actions justify-center mt-6">
      <%= link_to omikuji_path, class: "btn btn-md btn-wide btn-primary bg-indigo-200", data: { turbo: false } do %>
        もう一度占う
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
        </svg>
      <% end %>
    </div>
    <%= link_to "もどる", root_path, class: "btn btn-md btn-wide btn-secondary bg-pink-200 mt-4" %>
    <div class="twitter mt-4">
      <%= link_to "https://twitter.com/intent/tweet?url=#{request.base_url}&text=#{ERB::Util.url_encode("【今日の運勢を占ったよ！今日の運勢は、、、？】\n\n#{@omikuji}\n\n#FortunePocket")}", class: "btn btn-md btn-wide btn-secondary bg-teal-100", target: '_blank', data: { toggle: "tooltip", placement: "bottom" }, title: "Xでシェア" do %>
        <i class="fab fa-twitter"></i>Xでシェアする
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
        </svg>
      <% end %>
    </div>
  </div>
</div>
